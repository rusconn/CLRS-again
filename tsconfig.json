{
  "extends": "ts-node/node16/tsconfig.json",
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "transpileOnly": true,
    "files": true
  },
  "compilerOptions": {
    "incremental": true,
    "importsNotUsedAsValues": "error",
    "rootDir": "src/",
    "baseUrl": "src/",
    "paths": {
      "@/*": ["*"]
    }
  }
}
